@{
  Layout = "_Layout";
}

@using Favorful.Models;

<h1>FLAVORS</h1>
<hr/>
@if (Model.Count == 0)
{
  <h3>No flavors have been added yet</h3>
}
else
{
  <ol>
    @foreach (Flavor flavor in Model)
    {
      <li class="blocktext">@Html.ActionLink($"{flavor.Type}", "Details", new { id = flavor.FlavorId})</li>
    }
  </ol>
}
<hr />
<p>@Html.ActionLink("Add new Flavor", "Create", "Flavors", null, new {@class="button"})</p>
