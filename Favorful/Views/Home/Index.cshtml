@{
  Layout = "_Layout";
}

@using Favorful.Models;

<h1>Welcome to Pierre's Bakery 3.0!</h1>
<hr/>
<h2>TREATS</h2>
@if (Model["Treats"].Count == 0)
{
  <h3>No treats have been added yet</h3>
}
else
{
  <ul>
    @foreach (Treat treat in Model["Treats"])
    {
      <li class="blocktext">@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
}

<br>
<br>

<h2>FLAVORS</h2>
@if (Model["Flavors"].Count == 0)
{
  <h3>No flavors have been added yet</h3>
}
else
{
  <ul>
    @foreach (Flavor flavor in Model["Flavors"])
    {
      <li class="blocktext">@Html.ActionLink($"{flavor.Type}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}

<hr/>
<p>@Html.ActionLink("See all Treats", "Index", "Treats")</p> 
<p>@Html.ActionLink("See all Flavors", "Index", "Flavors")</p>
<p>@Html.ActionLink("Sign into an account", "Index", "Account")</p>
