@{
  Layout = "_Layout";
}

@model Favorful.Models.Treat

<h1>EDIT TREAT</h1>
<hr />

<h2>@Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.LabelFor(model => model.Name)
  <br>
  @Html.EditorFor(model => model.Name)
  <br>
  <br>
  @Html.LabelFor(model => model.CustomerRating)
  <br>
  @Html.EditorFor(model => model.CustomerRating)
  <br>
  <br>
  @Html.LabelFor(model => model.Price)
  <br>
  @Html.EditorFor(model => model.Price)
  <br>
  <br>
  @Html.LabelFor(model => model.Description)
  <br>
  @Html.EditorFor(model => model.Description)
  <br>
  <br>
  @Html.LabelFor(model => model.CurrentStock)
  <br>
  @Html.EditorFor(model => model.CurrentStock)
  <br>
  <br>
  @if (Enumerable.Count(ViewBag.FlavorId) != 0)
  {
    @Html.Label("Assign Flavor")
    <br>
    @Html.DropDownList("FlavorId")
    <br>
    <br>
  }
  <input type="submit" value="Save">
  <br>
  <br>
}
<hr />
<p>@Html.ActionLink("Back to Treat List", "Index", "Treats", null, new {@class="button"})</p>